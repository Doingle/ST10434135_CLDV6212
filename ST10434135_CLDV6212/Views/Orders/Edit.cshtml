@model ST10434135_CLDV6212.Models.Order

@{
    ViewData["Title"] = "Edit Order";
}

<h2>Edit Order</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="RowKey" />
    <input type="hidden" asp-for="PartitionKey" />

    <div class="form-group">
        <label>Customer</label>
        <select asp-for="CustomerId" class="form-control">
            @foreach (var customer in ViewBag.Customers)
            {
                <option value="@customer.RowKey" selected="@(Model.CustomerId == customer.RowKey)">
                    @customer.Name
                </option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Product</label>
        <select asp-for="ProductId" class="form-control">
            @foreach (var product in ViewBag.Products)
            {
                <option value="@product.RowKey" selected="@(Model.ProductId == product.RowKey)">
                    @product.Name (Stock: @product.Stock)
                </option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
    </div>

    <div class="form-group">
        <label>Status</label>
        <select asp-for="Status" class="form-control">
            <option value="Created" selected="@(Model.Status == "Created")">Created</option>
            <option value="Processing" selected="@(Model.Status == "Processing")">Processing</option>
            <option value="Completed" selected="@(Model.Status == "Completed")">Completed</option>
            <option value="Cancelled" selected="@(Model.Status == "Cancelled")">Cancelled</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
