@model ST10434135_CLDV6212.Models.Contract

@{
    ViewData["Title"] = "Delete Contract";
}

<h2>Delete Contract</h2>

<h3>Are you sure you want to delete this contract?</h3>

<div>
    <p><strong>File:</strong> @Model.FileName</p>
    <p><strong>Uploaded On:</strong> @Model.UploadedOn.ToString("yyyy-MM-dd HH:mm")</p>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="PartitionKey" />
    <input type="hidden" asp-for="RowKey" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
