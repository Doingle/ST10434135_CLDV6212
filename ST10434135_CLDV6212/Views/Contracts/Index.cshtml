@model IEnumerable<ST10434135_CLDV6212.Models.Contract>

@{
    ViewData["Title"] = "Contracts";
}

<h2>Contracts</h2>

<p>
    <a asp-action="Upload" class="btn btn-primary">Upload New Contract</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>File Name</th>
            <th>Uploaded On</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FileName</td>
                <td>@item.UploadedOn.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <!-- Download goes through the controller now -->
                    <a asp-action="Download"
                       asp-route-partitionKey="@item.PartitionKey"
                       asp-route-rowKey="@item.RowKey"
                       class="btn btn-success btn-sm">
                        Download
                    </a>

                    <a asp-action="Delete"
                       asp-route-partitionKey="@item.PartitionKey"
                       asp-route-rowKey="@item.RowKey"
                       class="btn btn-danger btn-sm">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
