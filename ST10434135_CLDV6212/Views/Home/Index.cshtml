</nav>

<!-- Hero Section -->
<section class="text-center py-5" style="background-color: #40e0d0; color: white;">
    <div class="container">
        <h1 class="fw-bold">Welcome to ABC Retail</h1>
        <p class="lead">A modern cloud-based Order Processing System By ST10434135</p>
    </div>
</section>

<!-- Customers -->
<section id="customers" class="py-5" style="background-color: #f8f9fa;">
    <div class="container text-center">
        <h2 class="fw-bold text-dark">Customers</h2>
        <p class="text-muted">Manage your customer details with ease. Add, update, and view customer records securely stored in Azure Table Storage.</p>
        <a href="/Customers" class="btn btn-outline-info">Go to Customers</a>
    </div>
</section>

<!-- Products -->
<section id="products" class="py-5" style="background-color: #e9ecef;">
    <div class="container text-center">
        <h2 class="fw-bold text-dark">Products</h2>
        <p class="text-muted">Keep track of your product catalog, upload product images to Azure Blob Storage, and manage stock seamlessly.</p>
        <a href="/Products" class="btn btn-outline-info">Go to Products</a>
    </div>
</section>

<!-- Orders -->
<section id="orders" class="py-5" style="background-color: #f8f9fa;">
    <div class="container text-center">
        <h2 class="fw-bold text-dark">Orders</h2>
        <p class="text-muted">Create, cancel, and track orders in real-time with automatic stock management and Azure Queue notifications.</p>
        <a href="/Orders" class="btn btn-outline-info">Go to Orders</a>
    </div>
</section>

<!-- Contracts -->
<section id="contracts" class="py-5" style="background-color: #e9ecef;">
    <div class="container text-center">
        <h2 class="fw-bold text-dark">Contracts</h2>
        <p class="text-muted">Manage agreements and contracts with customers for long-term business operations.</p>
        <a href="/Contracts" class="btn btn-outline-info">Go to Contracts</a>
    </div>
</section>

